{
  "manifest_version": 3,
  "name": "GoFaster",
  "version": "1.0.2",
  "description": "Lightning-fast tab navigation with VSCode-style command palette. Press Ctrl+P to search and switch tabs instantly.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "GoFaster - Quick Tab Navigation",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "commands": {
    "open-command-palette": {
      "suggested_key": {
        "default": "Ctrl+P",
        "mac": "Command+P"
      },
      "description": "Open GoFaster Command Palette"
    },
    "quick-switch": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Quick Tab Switch"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "Open GoFaster Popup"
    }
  }
}
